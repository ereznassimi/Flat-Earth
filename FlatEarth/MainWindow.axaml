<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FlatEarth.MainWindow"
        Title="FlatEarth"
        Width="800">
  <Border Background="AliceBlue">
    <DockPanel Margin="10">
      <!-- Next button docked at bottom -->
      <Button x:Name="NextButton"
              Content="Next"
              Click="OnNextButtonClick"
              Background="#444"
              Foreground="White"
              Margin="0,10,0,0"
              HorizontalAlignment="Right"
              DockPanel.Dock="Bottom"/>

      <!-- Scrollable list above -->
      <ScrollViewer>
        <StackPanel>
          <TextBlock Text="Select Locations" Foreground="Black" FontSize="18" Margin="0,0,0,10"/>
          <ListBox ItemsSource="{Binding Locations}" SelectionMode="Multiple" Background="#333" BorderBrush="Gray">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <StackPanel Orientation="Horizontal" Spacing="1">
                  <CheckBox IsChecked="{Binding IsSelected}" Foreground="White"/>
                  <TextBlock Text="{Binding Title}" Foreground="White"/>
                </StackPanel>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </StackPanel>
      </ScrollViewer>
    </DockPanel>
  </Border>
</Window>
